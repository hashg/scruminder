<div class="panel panel-default">
  <div class="panel-heading"><div class="panel-header-text">New Sprint</div></div>
    <div class="panel-body">
      {{#if errorMessage}}
        <div class="alert alert-danger">
          {{errorMessage}}
        </div>
      {{/if}}
      <form {{action newSprint on='submit'}}>
        {{input-text label="Name" placeholder="Enter sprint name" value=name formController=controller required=true autofocus=true}}
        <div class="form-group">
          <label class="control-label">Description</label>
          {{textarea value=description rows=4 class="form-control input-lg" placeholder="Enter description here.."}}
        </div><!-- form-group -->
        <div class="row">
          <div class="col-sm-12 col-md-6 form-group">
            <label class="control-label">From</label>
            {{view App.CalendarDatePicker class="form-control input-lg" valueBinding="start_dt"}}
          </div><!-- col-sm-12 -->
          <div class="col-sm-12 col-md-6 form-group">
            <label class="control-label">To</label>
            {{view App.CalendarDatePicker class="form-control input-lg" valueBinding="end_dt"}}
          </div><!-- col-sm-12 -->
        </div><!-- row -->
        
    </div> <!-- panel-body -->
  <div class="panel-footer" style="text-align:right">
    {{#link-to 'project' class="btn btn-no-rc btn-danger"}}Cancel{{/link-to}}
    {{#submit-button formController=controller tag="span"}}Save{{/submit-button}}
  </div>
  </form>
</div><!-- panel -->