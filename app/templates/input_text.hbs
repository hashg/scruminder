<label class="control-label" {{bind-attr for="inputField.elementId"}}>{{label}}</label>
{{input
  typeBinding="type"
  class="form-control input-lg"
  placeholderBinding="placeholder"
  valueBinding="value"
  viewName="inputField"}}
{{#if message}}
  <span class="help-block text-right">{{message}}</span>
{{/if}}