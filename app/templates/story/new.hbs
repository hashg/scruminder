<div class="panel panel-default">
  <div class="panel-heading"><div class="panel-header-text">New Task</div></div>
    <div class="panel-body">
      {{#if errorMessage}}
        <div class="alert alert-danger">
          {{errorMessage}}
        </div>
      {{/if}}
      <form {{action newTask on='submit'}}>
        {{input-text label="Name" placeholder="Enter task name" value=name formController=controller required=true autofocus=true}}
    </div> <!-- panel-body -->
  <div class="panel-footer" style="text-align:right">
    {{#link-to 'story' class="btn btn-no-rc btn-danger"}}Cancel{{/link-to}}
    {{#submit-button formController=controller tag="span"}}Save{{/submit-button}}
  </div>
  </form>
</div><!-- panel -->