<div class="container col-lg-offset-3 col-lg-6">
  <form class="form-horizontal" role="form" {{action login on="submit"}}>
    <h2 class="form-signin-heading">Login</h2>
    <div class="form-group">
      {{input type="text" placeholder="Login Id" valueBinding="username" autofocus=true class="form-control"}}
    </div>
    <div class="form-group">
      {{input type="password" placeholder="Password" valueBinding="password" class="form-control"}}
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Login</button>
      <button class="btn btn-danger">Cancel</button>
    </div>      
  </form>
</div>