<div class="container">
{{outlet}}

<div class="page-header">
  <h1 class="span">Persons 
  <div class="btn-group col-md-offset-3">
    <button type="button" class="btn btn-default active">All</button>
    <button type="button" class="btn btn-default">Starred</button>
  </div>
</div>
<div class="form-group input-group">
  <input type="search" class="form-control" placeholder="Search persons">
  <span class="input-group-addon glyphicon glyphicon-search"></span>
</div>

<ul class="list-group">
  {{#each item in model}}
  <li class="list-group-item">
    <h4 class="list-group-item-heading">{{#linkTo 'person' item }}{{item.name}}{{/linkTo}} 
    <span class="container pull-right">
      <span class="label label-default">{{item.id}}</span>
      <button class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-star-empty"></span>
      </button>
    </span>      
    </h4>
    {{!-- <p class="list-group-item-text">{{item.desc}}</p> --}}
  </li>
  {{else}}
  <li class="list-group-item"> Nobody here. </li>
  {{/each}}
</ul>
</div><!-- container -->
